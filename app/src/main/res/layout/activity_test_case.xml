<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".TestCaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/question_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Pregunta #1"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/question_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leve"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_body_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_text"
                android:textSize="20sp"
                android:layout_marginBottom="64dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answer_affirmative_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:gravity="center"
            style="?borderlessButtonStyle"
            android:textColor="#EF5350"
            android:text="Si"
            />

        <Button
            android:id="@+id/answer_negative_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:gravity="center"
            style="?borderlessButtonStyle"
            android:textColor="#9CCC65"
            android:text="No"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:text="@string/level_soft"
                />

            <ProgressBar
                android:id="@+id/test_case_bar1"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:text="@string/level_serious"
                />

            <ProgressBar
                android:id="@+id/test_case_bar2"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center_vertical|right"
                android:text="@string/level_hardcore"
                />

            <ProgressBar
                android:id="@+id/test_case_bar3"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar3"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>